<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#607d8b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CategoryListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="500dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/secAdvertise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/secHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewCatagoryPageHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word Power Swahili"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secCatagory"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/secCatagoryBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:background="@color/accent_material_light"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/secCatagoryList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/catBtnGreetings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Greetings / Maamkizi" />

                    <Button
                        android:id="@+id/catBtnExprs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expressions" />

                    <Button
                        android:id="@+id/catBtnNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number" />

                    <Button
                        android:id="@+id/catBtnTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time" />

                    <Button
                        android:id="@+id/catBtnDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Day" />

                    <Button
                        android:id="@+id/catBtnMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Months" />

                    <Button
                        android:id="@+id/catBtnSeason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seasons / Majira" />

                    <Button
                        android:id="@+id/catBtnTransport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transportation / Usafiri" />

                    <Button
                        android:id="@+id/catBtnPeople"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="People / Watu" />

                    <Button
                        android:id="@+id/catBtnWorker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Workers / Wafanyakazi" />

                    <Button
                        android:id="@+id/catBtnCloth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Clothings" />

                    <Button
                        android:id="@+id/catBtnFood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Food" />

                    <Button
                        android:id="@+id/catBtnWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight" />

                    <Button
                        android:id="@+id/catBtnAnimalDom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Animal Dom" />

                    <Button
                        android:id="@+id/catBtnAnimalWild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Animal Wild" />

                    <Button
                        android:id="@+id/catBtnPest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pests" />

                    <Button
                        android:id="@+id/catBtnBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Body" />

                    <Button
                        android:id="@+id/catBtnDirection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Direction" />

                    <Button
                        android:id="@+id/catBtnWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Words" />

                    <Button
                        android:id="@+id/catBtnIllness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Illness" />

                    <Button
                        android:id="@+id/catBtnSign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Signs" />

                    <Button
                        android:id="@+id/catBtnConstruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Construction" />

                    <Button
                        android:id="@+id/catBtnStationaries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stationaries" />

                    <Button
                        android:id="@+id/catBtnSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subjects" />

                    <Button
                        android:id="@+id/catBtnContinents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continents" />

                    <Button
                        android:id="@+id/catBtnCommonItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item" />

                    <Button
                        android:id="@+id/catBtnColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color" />

                    <Button
                        android:id="@+id/catBtnMath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Math" />

                    <Button
                        android:id="@+id/catBtnAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About us" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
